{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "es2023"
        ],
        "module": "commonjs",
        "target": "es2022",
        "esModuleInterop": true,
        "types": [
            "node",
        ],
        "paths": {
            "@/*": [
                "./src/*",
            ],
        }
    },
    "include": [
        "src/**/*",
        "../schema/**/*"
    ]
}